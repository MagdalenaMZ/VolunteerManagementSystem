@model IEnumerable<Volunteer>
@{
    ViewBag.Title = "All Volunteers";
    Layout = "_Layout";
}
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <!--<th class="text-right">ID</th>-->
        <th>First Name</th>
        <th>Last Name</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <!--<td class="text-right">@item.VolunteerID</td>-->
    <td>@item.FirstName</td>
    <td class="text-right">@item.LastName</td>
    <td class="text-center">
        <form asp-action="Delete" method="post">
            <a asp-action="Edit" class="btn btn-sm btn-warning"
               asp-route-productId="@item.VolunteerID">
                Edit
            </a>
            <input type="hidden" name="ProductID" value="@item.VolunteerID" />
            <button type="submit" class="btn btn-danger btn-sm">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Volunteer</a>
</div>
